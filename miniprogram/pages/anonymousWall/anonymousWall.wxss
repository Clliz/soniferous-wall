.container {
  padding: 20px;
}
.post {
  margin-bottom: 15px;
  padding: 10px;
  background-color: #fff;
  border-radius: 5px;
}
input {
  margin: 10px 0;
  padding: 5px;
  width: 100%;
  box-sizing: border-box;
}
button {
  margin-top: 10px;
  padding: 10px;
  width: 100%;
  background-color: #1aad19;
  color: #fff;
  border: none;
  border-radius: 5px;
  text-align: center;
}
